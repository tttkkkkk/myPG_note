<h1>Confirm  new</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if !@note.nil? %>
    <%= form_for @note  , :url => { :controller => :note, :action => :create } do |f| %>
      <div>
        <%= f.submit "Add", class: "btn btn-primary" %>
      </div>
      <div>
        <%= simple_format @note.content %>
        <%= f.hidden_field :content %>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
